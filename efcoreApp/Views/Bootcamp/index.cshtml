@model IEnumerable<Bootcamp>

    <h2>Bootcamp Listesi</h2>
    <a asp-controller="Bootcamp" asp-action="Create" class="btn btn-primary">Bootcamp Ekle</a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m=>m.BootcampId)</th>
                <th>@Html.DisplayNameFor(m=>m.Baslik)</th>
                <th>@Html.DisplayNameFor(m=>m.Ogretmen.AdSoyad)</th>

                <th style="width: 150px;">Settigns</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BootcampId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ogretmen.AdSoyad)</td>
                    <td>
                        <a asp-controller="Bootcamp" asp-action="Edit" asp-route-id="@item.BootcampId" class="btn btn-sm btn-primary">Details</a>
                        <a asp-controller="Bootcamp" asp-action="Delete" asp-route-id="@item.BootcampId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>